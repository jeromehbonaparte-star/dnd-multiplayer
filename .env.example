# Server Configuration
PORT=3000

# Database path (relative or absolute)
DB_PATH=./data/dnd.db

# Node environment
NODE_ENV=production

# Game password (for all players to access the game)
# REQUIRED: Set a strong password. If not set, a random password will be generated on first run.
GAME_PASSWORD=your_secure_password_here

# Admin password (for settings access - only you should know this)
# REQUIRED: Set a strong password. If not set, a random password will be generated on first run.
ADMIN_PASSWORD=your_admin_password_here

# CORS allowed origins (comma-separated, optional)
# Leave empty to allow same-origin only
# Example: CORS_ORIGINS=https://myapp.com,https://game.myapp.com
CORS_ORIGINS=

# Logging level: error, warn, info, debug
# Set to 'debug' for development, 'info' or 'warn' for production
LOG_LEVEL=info
